{
  "name": "node-starter",
  "version": "0.0.1",
  "description": "Express Starter",
  "main": "dist/server.js",
  "repository": "git@github.com:hieudoanm/node-starter.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14",
    "npm": ">= 8",
    "yarn": "1"
  },
  "scripts": {
    "build:express": "yarn workspace express-starter build",
    "build:graphql": "yarn workspace graphql-starter build",
    "build:key-cloak": "yarn workspace key-cloak-starter build",
    "build:mongo": "yarn workspace mongo-starter build",
    "build:next": "yarn workspace next-starter build",
    "build": "yarn build:graphql && yarn build:express && yarn build:key-cloak && yarn build:mongo && yarn build:next",
    "dev:express": "yarn workspace express-starter dev",
    "dev:graphql": "yarn workspace graphql-starter dev",
    "dev:key-cloak": "yarn workspace key-cloak-starter dev",
    "dev:mongo": "yarn workspace mongo-starter dev",
    "dev:next": "yarn workspace next-starter dev",
    "dev": "yarn dev:graphql && yarn dev:express && yarn dev:key-cloak && yarn dev:mongo && yarn dev:next",
    "lint:express": "yarn workspace express-starter lint",
    "lint:graphql": "yarn workspace graphql-starter lint",
    "lint:key-cloak": "yarn workspace key-cloak-starter lint",
    "lint:mongo": "yarn workspace mongo-starter lint",
    "lint:next": "yarn workspace next-starter lint",
    "lint": "yarn lint:graphql && yarn lint:express && yarn lint:key-cloak && yarn lint:mongo && yarn lint:next",
    "test:express": "yarn workspace express-starter test",
    "test:graphql": "yarn workspace graphql-starter test",
    "test:key-cloak": "yarn workspace key-cloak-starter test",
    "test:mongo": "yarn workspace mongo-starter test",
    "test:next": "yarn workspace next-starter test",
    "test": "yarn test:graphql && yarn test:express && yarn test:key-cloak && yarn test:mongo && yarn test:next",
    "graph": "nx graph"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "concurrently": "7.3.0",
    "husky": "8.0.1",
    "nx": "14.5.1",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3"
  },
  "workspaces": [
    "messages/*",
    "services/*",
    "web/*"
  ]
}
